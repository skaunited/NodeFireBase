doctype html
html
  head
    style.
      table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
      }
      td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
      }
      tr:nth-child(even) {
      background-color: #dddddd;
      }
      .button {
      background-color: #4CAF50; /* Green */
      border: none;
      color: white;
      padding: 15px 32px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      margin: 4px 2px;
      cursor: pointer;
      }
      .button3 {background-color: #f44336;} /* Red */
      .button4 {background-color: #58ACFA;} /* Red */
      a:link, a:visited {
      }

      .blue { color: #00f;
      background-color: green;
      color: white;
      padding: 14px 25px;
      text-align: center;
      text-decoration: none;
      display: inline-block;}

      .green {color: #008000;
      background-color: blue;
      color: white;
      padding: 14px 25px;
      text-align: center;
      text-decoration: none;
      display: inline-block;}

      .red {color: #ffffff;
      background-color: red;
      color: white;
      padding: 14px 25px;
      text-align: center;
      text-decoration: none;
      display: inline-block;}
  body
    table
      tr
        th Title
        th Start Time
        th Picture
        th Button
      each val in array
        tr
          th #{val.name}
          th #{val.start_time}
          th
            img(src='#{val.cover}', alt='Smiley face', height='84', width='84')
          th
            a(href='http://37.59.19.10:9999/validEvent?id=#{val.id}')
              span.blue Valider
            a(href='http://37.59.19.10:9999/rejectEvent?id=#{val.id}')
              span.red Rejeter
            a(href='http://37.59.19.10:9999/editEvent?id=#{val.id}')
              span.green Editer
