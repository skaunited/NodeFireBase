doctype html
html(lang='en')
  head
    title Yallah Admin
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='css/bootstrap.min.css')
    link(rel='stylesheet', href='css/bootstrap-responsive.min.css')
    link(rel='stylesheet', href='css/fullcalendar.css')
    link(rel='stylesheet', href='css/matrix-style.css')
    link(rel='stylesheet', href='css/select2.css')
    link(rel='stylesheet', href='css/matrix-media.css')
    link(href='font-awesome/css/font-awesome.css', rel='stylesheet')
    link(rel='stylesheet', href='css/jquery.gritter.css')
    link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800', rel='stylesheet', type='text/css')
  body
    // Header-part
    #header
      h1
        a(href='index') Yallah Admin
    // close-Header-part
    // top-Header-menu
    #user-nav.navbar.navbar-inverse
      ul.nav
        li#profile-messages.dropdown
          a.dropdown-toggle(title='', href='#', data-toggle='dropdown', data-target='#profile-messages')
            i.icon.icon-user
            span.text Welcome User
            b.caret
          ul.dropdown-menu
            li
              a(href='#')
                i.icon-user
                |  My Profile
            li.divider
            li
              a(href='#')
                i.icon-check
                |  My Tasks
            li.divider
            li
              a(href='login')
                i.icon-key
                |  Log Out
        li
          a(title='', href='/logout')
            i.icon.icon-share-alt
            span.text Logout
    // close-top-Header-menu
    // start-top-serch
    #search
      input(type='text', placeholder='Search here...')
      button.tip-bottom(type='submit', title='Search')
        i.icon-search.icon-white
    // close-top-serch
    // sidebar-menu
    #sidebar
      a.visible-phone(href='#')
        i.icon.icon-home
        |  Dashboard
        ul
          li
            a(href='/home')
              i.icon.icon-home
              span Dashboard
          li
            a(href='pendings')
              i.icon.icon-tasks
              span Pending Events
          li
            a(href='validevents')
              i.icon.icon-ok-sign
              span Valid Events
          li
            a(href='category')
              i.icon.icon-sitemap
              span All Category
          li
            a(href='allusers')
              i.icon.icon-group
              span Users
    // sidebar-menu
    // main-container-part
    #content
      // breadcrumbs
      #content-header
        #breadcrumb
          a.tip-bottom(href='index', title='Go to Home')
            i.icon-home
            |  Home
      // End-breadcrumbs
      // Action boxes
      .container-fluid
        .row-fluid
          .widget-box
            .widget-title.bg_lg
              span.icon
                i.icon-signal
              h5 Site Analytics
            .widget-content
              .row-fluid
                .span9
                  .chart
                .span3
                  ul.site-stats
                    li.bg_lh
                      i.icon-user
                      strong #{usersCount.length}
                      small Total Users
                    li.bg_lh
                      i.icon-sitemap
                      strong #{cathegorysCount.length}
                      small Total Cathegory
                    li.bg_lh
                      i.icon-eye-close
                      strong #{array.length}
                      small Pending Events
                    li.bg_lh
                      i.icon-ok-sign
                      strong #{eventsCount.length}
                      small Online Events
        // End-Chart-box
        hr
    // end-main-container-part
    // Footer-part
    .row-fluid
      #footer.span12
        | 2017 Â© Yallah Admin. Brought to you by 
        a(href='mailto:skander.bahri@hotmail.com?Subject=Hello%20skander') Skander bahri
    // end-Footer-part
