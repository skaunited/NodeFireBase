doctype html
html
  head
    style.
      table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
      }
      td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
      }
      tr:nth-child(even) {
      background-color: #dddddd;
      }
      .button {
      background-color: #4CAF50; /* Green */
      border: none;
      color: white;
      padding: 15px 32px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      margin: 4px 2px;
      cursor: pointer;
      }
      .button3 {background-color: #f44336;} /* Red */
  body
    table
      tr
        th Index
        th Name
        th Picture
        th Button
      each val in array
        tr
          th #{val.index}
          th #{val.name}
          th
            img(src='#{val.photoUrl}', alt='Smiley face', height='84', width='84')
          th
            button.button Edit
            button.button.button3 Delete
